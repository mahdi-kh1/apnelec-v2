{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "zeroConfig": true,
        "forceBuildCacheClear": true
      }
    }
  ],
  "crons": [
    {
      "path": "/api/clear-cache",
      "schedule": "0 5 * * *"
    }
  ]
} 